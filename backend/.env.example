# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://apc_user:apc_password@localhost:5432/apc_pdu

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug

# SNMP Configuration
SNMP_TIMEOUT=5000
SNMP_RETRIES=3

# State Management Configuration
STATE_RECONCILIATION_INTERVAL=30000  # 30 seconds
PDU_POLLING_INTERVAL=10000          # 10 seconds
REBOOT_DETECTION_THRESHOLD=5        # Number of outlets that must change

# Encryption Key (Change this in production!)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_CHECK_INTERVAL=60000      # 1 minute

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000         # 30 seconds
WS_MAX_CONNECTIONS=100

# Metrics Retention
METRICS_RETENTION_DAYS=30
EVENTS_RETENTION_DAYS=90

# Prometheus Metrics Configuration
PROMETHEUS_ENABLED=true              # Enable/disable Prometheus metrics endpoint
PROMETHEUS_DEFAULT_METRICS=true      # Collect default Node.js metrics (memory, CPU, etc.)

# Polling Intervals (override defaults if needed)
POLL_INTERVAL=30000                  # PDU polling interval in ms (default: 30s)
RECONCILE_INTERVAL=60000             # State reconciliation interval in ms (default: 60s)
METRICS_INTERVAL=300000              # Power metrics collection interval in ms (default: 5 minutes)