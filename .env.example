# Production Environment Variables
# Copy this file to .env and update with your values

# GitHub Container Registry
GITHUB_REPOSITORY=yourusername/apc-pdu-control
VERSION=latest

# Database Configuration
DB_USER=apc_user
DB_PASSWORD=change_me_strong_password
DB_NAME=apc_pdu

# Application Configuration
NODE_ENV=production
CORS_ORIGIN=http://your-domain.com
LOG_LEVEL=info

# IMPORTANT: Generate a secure 32-character key for production
# You can use: openssl rand -hex 16
ENCRYPTION_KEY=change_this_32_character_key_now

# SNMP Configuration
SNMP_TIMEOUT=5000
SNMP_RETRIES=3

# State Management
STATE_RECONCILIATION_INTERVAL=30000
PDU_POLLING_INTERVAL=10000
REBOOT_DETECTION_THRESHOLD=5

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_DEFAULT_METRICS=true

# Port Configuration
FRONTEND_PORT=80
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Grafana Credentials (for monitoring profile)
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_me_strong_password